namespace neio.stdlib.math;

import neio.lang.Content;

class Eq extends Content;

String texname;

Eq() {
    texname = "equation";
}

Sqrt sqrt(Content root, Content arg) {
    return addContent(new Sqrt(root, arg));
}

Sqrt sqrt(Content arg) {
    return sqrt(null, arg);
}

Eq nonu() {
    texname = texname + "*";
    return this;
}

String toTex() {
    return "\\begin{" + texname + "}" + super.toTex() + "\n\\end{" + texname + "}";
}