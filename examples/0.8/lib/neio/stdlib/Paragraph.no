namespace neio.stdlib;

import neio.lang.*;

class Paragraph extends Content;

Text text;

Paragraph() {
    text = null;
}

Paragraph(String parText) {
	text = new Text(parText);
}

Paragraph(Text text) {
    this.text = text;
}

Paragraph appendLine(String s) {
    return appendLine(new Text(s));
}

Paragraph appendLine(Text t) {
    text = text.appendText(new Text("\n")).appendText(t);
    return this;
}

public surround Text *(Text t) {
    return new BoldText(t);
}

public surround Text _(Text t) {
    return new ItalicText(t);
}

public surround Text `(Text t) {
    return new MonospaceText(t);
}

Paragraph appendText(Text t) {
    if (text == null) {
        text = t;
    } else {
        text = text.appendText(t);
    }
    return this;
}

Text text() {
    return text;
}

String toTex() {
    if (text != null) {
        return "\\par " + text.toTex();
    } else {
        return "";
    }
}