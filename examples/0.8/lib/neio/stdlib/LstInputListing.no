namespace neio.stdlib;

import neio.lang.Content;

class LstInputListing extends Content;

String path;

LstInputListing(String path) {
    this.path = path;
}

String toTex() {
    String name = path.substring(path.lastIndexOf('/') + 1, path.length());
    StringBuilder result = new StringBuilder("\\lstinputlisting[caption=");
    result.append(name);
    result.append("]{");
    result.append(path);
    result.append("}");

    return result.toString();
}
